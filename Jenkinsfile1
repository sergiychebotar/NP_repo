pipeline{
    agent any
    options{
        buildDiscarder(logRotator(numToKeepStr: '5', daysToKeepStr: '5'))
        timestamps()
    }
    environment {
        MYSQL_USER = "your_wordpress_database_user"
        MYSQL_PASSWORD = ${MYSQL_PSW}
        MYSQL = credentials('MYSQL')
    }
    parameters {
      credentials credentialType: 'com.cloudbees.plugins.credentials.impl.UsernamePasswordCredentialsImpl', defaultValue: 'MYSQL', name: 'MYSQL_PASSWORD', required: false
    }
    stages{
       stage('Deploying image') {
      steps{
        script {
          sh "docker-compose up -d --force-recreate --no-deps wordpress"
        }
      }
    }
  }
}